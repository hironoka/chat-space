.chat
  .chat-side
    = render partial: 'layouts/chat_side'
  .chat-main
    .chat-header
      .chat-header__left
        .chat-group-name
          %h2
          = @group.name
        .chat-group-member
          %span Member:
          - @group.users.each do |user|
            = user.name
      .chat-header__right
        = link_to "Edit", edit_group_path(@group)
    .chat-body
      %ul.chat-messages
        = render @messages
    .chat-footer
      = form_for [@group, @message] do |f|
        .chat-footer__left
          .message-form-area
            = f.text_area :body, placeholder: "type a message", id: "message_form", rows: 1
          .image_form
            %i
              = f.label :image, class: "fa fa-image"
              = f.file_field :image, class: "image_form_button"
        .chat-footer__right
          = f.submit value: "Send", class: "send-button"
